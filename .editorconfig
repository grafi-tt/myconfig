root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

[{Rakefile,*.rb}]
indent_style = space
indent_size = 2

[*.{hs,agda}]
indent_style = space
indent_size = 2

[*.{ml,mli,v}]
indent_style = space
indent_size = 2

[*.{tex,latex,sty}]
indent_style = space
indent_size = 2

[{*.vim,{.gvimrc,.vimrc}*}]
indent_style = space
indent_size = 2
