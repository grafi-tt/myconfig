window VMWare /(vmplayer|vmware-vmx)\.exe:VMPlayerFrame:VMWindow/ : Global
	if ( SwapWinAlt )
		key *Lwin = *RAlt
		key *LAlt = *LAlt
		key *RAlt = *LAlt
		if ( WinF13F14 )
			mod alt += !!LAlt !!RAlt
			key A-LAlt = C-S-F11
			key A-RAlt = C-S-F12
		else
			mod alt += LAlt RAlt
		endif
		mod windows -= LAlt RAlt
	else
		key *LAlt = *RAlt
		key *LWin = *LAlt
		key *RWin = *LAlt
		if ( WinF13F14 )
			mod alt += !!LWin !!RWin
			key A-LWin = C-S-F11
			key A-RWin = C-S-F12
		else
			mod alt += LWin RWin
		endif
		mod windows -= LWin RWin
	endif
